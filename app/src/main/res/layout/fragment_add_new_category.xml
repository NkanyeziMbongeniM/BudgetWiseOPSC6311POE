<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GOrangeF"
    tools:context=".ui.fragment.AddNewCategoryFragment"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Category"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/BlueP"
                android:layout_marginBottom="24dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MaterialEditText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/categoryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Category Name"
                    android:textColor="@android:color/black"
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MaterialEditText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/categoryDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Category Description"
                    android:textColor="@android:color/black"
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MaterialEditText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/categoryPriceLimit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Category Price Limit"
                    android:inputType="numberDecimal"
                    android:textColor="@android:color/black"
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Floating Action Button for Add Category -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addCategoryButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_add"
                android:layout_gravity="center"
                android:tint="@android:color/white"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                app:backgroundTint="@color/BlueP"
                app:elevation="6dp" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>
