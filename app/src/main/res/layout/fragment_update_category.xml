<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GOrangeF"
    tools:context=".ui.category.UpdateCategoryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center"
            android:layout_gravity="center">

            <!-- Page Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: Groceries"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/BlueP"
                android:layout_marginBottom="24dp" />

            <!-- Category Name -->
            <EditText
                android:id="@+id/categoryName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Category Name"
                android:textSize="18sp"
                android:backgroundTint="@color/BlueP"
                android:textColor="@android:color/black"
                android:padding="12dp"
                android:gravity="center"
                android:text="Groceries"
                android:layout_marginBottom="12dp" />

            <!-- Category Description -->
            <EditText
                android:id="@+id/categoryDescription"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Category Description"
                android:textSize="18sp"
                android:backgroundTint="@color/BlueP"
                android:textColor="@android:color/black"
                android:padding="12dp"
                android:gravity="center"
                android:text="Monthly grocery shopping budget"
                android:layout_marginBottom="12dp" />

            <!-- Category Price Limit -->
            <EditText
                android:id="@+id/categoryPriceLimit"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Category Price Limit"
                android:inputType="numberDecimal"
                android:textSize="18sp"
                android:backgroundTint="@color/BlueP"
                android:textColor="@android:color/black"
                android:padding="12dp"
                android:gravity="center"
                android:text="500.00"
                android:layout_marginBottom="24dp" />

            <!-- Save Button -->
            <Button
                android:id="@+id/saveCategoryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="18sp"
                android:backgroundTint="@color/BlueP"
                android:textColor="@android:color/white"
                android:padding="12dp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
