<resources>

    <!-- Existing styles... -->

    <!-- Custom style for Exposed Dropdown Menu -->
    <style name="CustomExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/BlueP</item>
        <item name="boxBackgroundColor">@android:color/white</item>
    </style>
    <style name="DialogSlideAnimationStyle" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
    </style>

    <style name="DialogExitAnimationStyle" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>
    <style name="MaterialEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/GrayDark</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/BlueP</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>
